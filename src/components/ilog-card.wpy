<style lang="less">
    @font-face {
        font-family: "iconfont";
        src: url('iconfont.eot?t=1545317804991');
        /* IE9*/
        src: url('iconfont.eot?t=1545317804991#iefix') format('embedded-opentype'), /* IE6-IE8 */ url('data:application/x-font-woff;charset=utf-8;base64,') format('woff'), url('iconfont.ttf?t=1545317804991') format('truetype'), /* chrome, firefox, opera, Safari, Android, iOS 4.2+*/ url('iconfont.svg?t=1545317804991#iconfont') format('svg');
        /* iOS 4.1- */
        font-weight: normal;
        font-style: normal;
    }

    .card {
        -webkit-font-smoothing: antialiased;
        background-color: #fff;
        padding: 25rpx 25rpx;
        margin-bottom: 30rpx;
        overflow: hidden;
        color: #333;
        .head-area {
            display: flex;
            flex-direction: row;
            color: #666;
            margin-bottom: 15rpx;
            .box {
                display: flex;
                flex-direction: column;
                .userinfo-avatar {
                    width: 90rpx;
                    height: 90rpx;
                    border-radius: 50%;
                }
                .title {
                    font-size: 10pt;
                    margin: 10rpx 0 0 20rpx;
                    -webkit-line-clamp: 2;
                    line-height: 1.2;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    display: -webkit-box;
                    -webkit-line-clamp: 2;
                    -webkit-box-orient: vertical;
                }
                .info-area {
                    font-size: 9pt;
                    margin: 10rpx 0 0 20rpx;
                    opacity: .8;
                    font-family: 'iconfont';
                    .posted-date {
                        &:before {
                            content: '\e64e';
                            margin-right: 10rpx;
                        }
                    }
                    .views {
                        margin-left: 30rpx;
                        &:before {
                            content: '\e666';
                            margin-right: 10rpx;
                        }
                    }
                }
            }
        }
        .content-area {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-box-flex: 1;
            .card-content {
                line-height: 1.3;
                font-size: 12pt;
                margin: 12rpx 0;
                font-family: HelveticaNeue-Light;
                overflow: hidden;
                color: #333;
                text-overflow: ellipsis;
                display: -webkit-box;
                -webkit-line-clamp: 3;
                -webkit-box-orient: vertical;
            }
            .image-area{
                width: 100%;
                display: flex;
                flex-wrap: wrap;
                margin: 10rpx 0;
                .image{
                    position: relative;
                    width:33%;
                    height: 100px;
                }
                .moment-img{
                    width: 99%;
                    height: 98px;
                    padding: 2px;
                }
            }
        }
    }
</style>
<template>
    <view class="card">
        <view class="head-area">
            <view class="box">
                <image class="userinfo-avatar" src="{{avatar}}" mode="cover"></image>
            </view>
            <view class="box">
                <text class="title">{{user_name}}</text>
                <view class="info-area">
                    <text class="posted-date">{{date}}</text>
                    <text class="views">{{praise_num}}</text>
                </view>
            </view>
        </view>
        <view class="content-area">
            <text class="card-content">{{content}}</text>
            <view class="image-area">
                <view wx:for="{{images}}" wx:key="{{key}}" class="image">
                    <image class="moment-img" src="{{item}}" ></image>
                </view>
            </view>
        </view>
    </view>
</template>
<script>
    import wepy from '@wepy/core'

    wepy.component({
        props: {
            user_name: String,
            avatar: String,
            date: String,
            praise_num: Number,
            content: String,
            images: Array
        }
    });
</script>
